<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/convertFragment">

    <fragment
        android:id="@+id/chordsFragment"
        android:name="com.example.chordiagram.ui.chords.ChordsFragment"
        android:label="chords_fragment"
        tools:layout="@layout/chords_fragment" >
        <argument
            android:name="chordString"
            app:argType="string" />
        <action
            android:id="@+id/action_chordsFragment_to_convertFragment"
            app:destination="@id/convertFragment"
            app:popUpTo="@id/convertFragment" />
    </fragment>
    <fragment
        android:id="@+id/convertFragment"
        android:name="com.example.chordiagram.ui.convert.ConvertFragment"
        android:label="convert_fragment"
        tools:layout="@layout/convert_fragment" />
    <action
        android:id="@+id/action_global_chordsFragment"
        app:destination="@id/chordsFragment" />
</navigation>