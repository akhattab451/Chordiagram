<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Chordiagram" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:itemTextAppearance">@style/MenuItemTextAppearance</item>

    </style>

    <style name="Theme.Chordiagram.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MenuItemTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Chordiagram.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Chordiagram.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>